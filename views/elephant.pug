extends layout
 
block content
  h1= title
  -
    let results = [
      {
        "elephant_name":"Elephas maximus",
        "age": 3,
        "bread": "Asian"
      },
      {
        "elephant_name":"Loxodonta ",
        "age": 7,
        "bread": "African"
      },
      {
        "elephant_name":"Abigail",
        "age": 11,
        "bread": "Borneo"
      },                   
    ]
  div(class= "container-fluid")
    div(class = "row")
      each value,index in results
        div(class= "col-sm-2", onclick=`buy(${index})`) Elephant_Name: #{value.elephant_name}
        div(class= "col-sm-2", onclick=`buy(${index})`) Age: #{value.age}
        div(class= "col-sm-2", onclick=`buy(${index})`) Bread: #{value.bread}
        br
        br
        br
       
  script.
    function buy(index){
      alert(`You purchased item ${index+1}`)
    }