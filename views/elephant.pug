extends layout
 
block content
  h1= title
  -
    let items = results
  div(class= "container-fluid")
    div(class = "row")
      each value,index in items
        div(class= "col-sm-2", onclick=`buy(${index})`) name: #{value.name}
        div(class= "col-sm-2", onclick=`buy(${index})`) age: #{value.age}
        div(class= "col-sm-2", onclick=`buy(${index})`) bread: #{value.bread}
        br
        br
        br
       
  script.
    function buy(index){
      alert(`You purchased item ${index+1}`)
    }