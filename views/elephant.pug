extends layout
block content
  h1= title
  -
    let items = results
  div(class= "container-fluid")
    div(class = "row")
      each value,index in items
        - let destination = 'dispatch(\"/elephant/update?id=${value._id}\")'
        div(class= "col-sm-2", onclick=`buy(${index})`) name: #{value.name}
        div(class= "col-sm-2", onclick=`buy(${index})`) age: #{value.age}
        div(class= "col-sm-2", onclick=`buy(${index})`) bread: #{value.bread}
        button.btn( class="btn-primary ml-1", onclick= destination) Update
        br
        br
        br
 
  script.
    function dispatch(path){
      window.location.href=path
    }