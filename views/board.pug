extends layout

block content
  h1= title
  p Query Rows: #{query.rows}
  p Query Columns: #{query.cols}

  - var rows = Number(query.rows); 
  - var cols = Number(query.cols);

  - if (!(Number.isInteger(rows)) || !(Number.isInteger(cols)))
    p Rows and columns passed are not integers.
  - else if (rows < 1 || rows > 10)
    p Rows are not between 1 and 10.
  - else if (cols < 1 || cols > 10)
    p Columns are not between 1 and 10.
  - else
    br
    h5 Displaying
    table#outer
      - for (let i = 1; i <= rows; i++)
        tr#middle
          - for (let j = 1; j <= cols; j++)
            - if (i === j)
              td= "1"
            - else if (i === j + 1)
              td= "2"
            - else if (i === j - 1)
              td= i-1
            - else
              td= "0"